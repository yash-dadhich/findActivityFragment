<idea-plugin>
  <idea-version since-build="251" />
  <id>com.yash.currentfragment</id>
  <name>Current Fragment</name>
  <version>1.0.0</version>
  <vendor email="yashdadhich.6081@gmail.com">Yash Dadhich</vendor>
  <description><![CDATA[Find the current Activity and Fragments of running Android app via ADB.
        Supports Android 7-14.]]></description>
  <depends>com.intellij.modules.platform</depends>
  <depends>org.jetbrains.android</depends>
  <actions>
    <action id="CurrentFragment" class="com.yash.currentfragment.CurrentFragmentAction" text="Current Fragment" description="Find current Activity and Fragments">
      <add-to-group group-id="CodeMenu" anchor="last" />
      <keyboard-shortcut keymap="$default" first-keystroke="alt 0" />
    </action>
  </actions>
</idea-plugin>
